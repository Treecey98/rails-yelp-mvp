<div class="container">
  <h1 class="title">Restaurants</h1>

  <ul>
    <% @restaurants.each do |rest| %>
    <li class="bordered-list"> <%=link_to rest.name, restaurant_path(rest) %></li>
    <% end %>
  </ul>

  <p class ="btn btn-primary"><%= link_to "Add a new restaurant to the list", new_restaurant_path() %></p>
</div>
